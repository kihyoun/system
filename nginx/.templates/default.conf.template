upstream ${PROXY_NAME} {
    server ${PROXY_IP}:${PROXY_PORT};
}

server {
    listen      80;
    server_tokens off;
    server_name ${PROXY_HOSTNAME};
    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_pass http://${PROXY_NAME};
        proxy_http_version 1.1;
    }
}

