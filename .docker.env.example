# -- BACKUP
BACKUPDIR=/mnt/backup
LIVEDIR=/srv

# -- GITLAB
export GITLAB_HOME=/srv/gitlab
GITLAB_EXTERNAL_URL=https://gitlab.example.com
GITLAB_REGISTRY_URL=https://registry.example.com

# -- NGINX
PROD_HOST=www.typingninjas.com
PROD_PORT=80
PROD_DOMAIN_MODE=2
PROD_SSL=/etc/letsencrypt/live/www.example.com/fullchain.pem;
PROD_SSL_KEY=/etc/letsencrypt/live/www.example.com/privkey.pem;
PROD_UPSTREAM=prod

BETA_HOST=beta.typingninjas.com
BETA_PORT=80
BETA_DOMAIN_MODE=2
BETA_SSL=/etc/letsencrypt/live/beta.example.com/fullchain.pem;
BETA_SSL_KEY=/etc/letsencrypt/live/beta.example.com/privkey.pem;
BETA_UPSTREAM=beta

export GITLAB_HOST=gitlab.example.com
GITLAB_PORT=80
GITLAB_DOMAIN_MODE=2
GITLAB_SSL=/etc/letsencrypt/live/gitlab.example.com/fullchain.pem;
GITLAB_SSL_KEY=/etc/letsencrypt/live/gitlab.example.com/privkey.pem;
GITLAB_UPSTREAM=gitlab

GITLAB_REGISTRY_HOST=registry.example.com
GITLAB_REGISTRY_DOMAIN_MODE=2
GITLAB_REGISTRY_PORT=5050
GITLAB_REGISTRY_SSL=/etc/letsencrypt/live/registry.example.com/fullchain.pem;
GITLAB_REGISTRY_SSL_KEY=/etc/letsencrypt/live/registry.example.com/privkey.pem;
GITLAB_REGISTRY_UPSTREAM=registry

REVIEW_HOST=example.com
REVIEW_PORT=80
REVIEW_DOMAIN_MODE=1
REVIEW_UPSTREAM=review

export NGINX_TEMPLATE_DIR=/srv/nginx/templates

# -- GITLAB RUNNER
GITLAB_RUNNER_TOKEN=
export GITLAB_RUNNER_DOCKER_SCALE=4
